{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile",
    "watchPaths": [
      "api/**",
      "src/**",
      "samples/**",
      "requirements*.txt",
      "Dockerfile",
      "railway.json",
      "pyproject.toml"
    ]
  },
  "deploy": {
    "restartPolicyType": "ALWAYS",
    "restartPolicyMaxRetries": 10
  }
}